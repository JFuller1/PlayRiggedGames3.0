@model List<Admin_Users_ViewModel>;

<h1>Users</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Blacklisted</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Admin_Users_ViewModel viewModel in Model)
            {
                <tr style="color: @(viewModel.User.BlackListed ? "red" : "black")">
                    <td>@(viewModel.User.Id)</td>
                    <td>@(viewModel.User.UserName)</td>
                    <td>@(viewModel.User.FirstName)</td>
                    <td>@(viewModel.User.LastName)</td>
                    <td>@(viewModel.User.Email)</td>
                    <td>@(viewModel.Role.Name)</td>
                    <td>@(viewModel.User.BlackListed)</td>
                    <td><a class="" asp-area="" asp-controller="Admin" asp-action="User" asp-route-Id="@(viewModel.User.Id)">Detail</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
// no slotmachines
    <p>No slot machines were detected in database. Contact an admin to add one.</p>
}