@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />


<div class="content">
    <h2>@ViewData["Title"]</h2>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="input-container">
            <div class="username">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="first-name">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" autocomplete="firstName" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="last-name">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" autocomplete="lastName" aria-required="true" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="input-container">
            <div class="email">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="password">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="confirm-password">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="submit">
            <button type="submit">Register</button>
        </div>
    </form>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</div>
