@model List<SlotMachine>;

<h1>Slot Machines</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Width</th>
                <th scope="col">Height</th>
                <th scope="col">Out of Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SlotMachine slotMachine in Model)
            {
                <tr style="color: @(slotMachine.OutOfOrder ? "red" : "black")">
                    <td>@(slotMachine.Id)</td>
                    <td>@(slotMachine.Name)</td>
                    <td>@(slotMachine.Width)</td>
                    <td>@(slotMachine.Height)</td>
                    <td>@(slotMachine.OutOfOrder)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    // no slotmachines
    <p>No slot machines were detected in database. Contact an admin to add one.</p>
}