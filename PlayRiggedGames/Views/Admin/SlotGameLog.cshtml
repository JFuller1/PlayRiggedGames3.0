@model Admin_SlotGameLog_ViewModel;

<h1>Slot Game Log Details</h1>

@if (Model.SlotGameLog == null)
{
    <p>Selected Slot Game Log does not exist.</p>
}
else
{
    <p>ID:              @(Model.SlotGameLog.Id)</p>
    <p>Money Input:     @(Model.SlotGameLog.MoneyInput)</p>
    <p>Money Output:    @(Model.SlotGameLog.MoneyOutput)</p>
    <p>Time:            @(Model.SlotGameLog.Time)</p>
    <p>Jackpot:         @(Model.SlotGameLog.Jackpot)</p>
    <p>Player:          <a class="" asp-area="" asp-controller="Admin" asp-action="ApplicationUser" asp-route-id="@(Model.Player.Id)">@(Model.Player.UserName)</a></p>
    <p>Slot Machine:    <a class="" asp-area="" asp-controller="Admin" asp-action="SlotMachine" asp-route-id="@(Model.SlotMachine.Id)">@(Model.SlotMachine.Name)</a></p>


    <br />

    <h2>Outcomes in game</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Location</th>
                <th scope="col">Slot Id</th>
                <th scope="col">Name</th>
                <th scope="col">Value</th>
                <th scope="col">Weight</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (KeyValuePair<int, SlotSymbol> kvp in Model.SlotOutcomes)
            {
                <tr>
                    <td>@(kvp.Key)</td>
                    <td>@(kvp.Value.Id)</td>
                    <td>@(kvp.Value.Name)</td>
                    <td>@(kvp.Value.Value)</td>
                    <td>@(kvp.Value.Weight)</td>                
                    <td><a class="" asp-area="" asp-controller="Admin" asp-action="SlotSymbol" asp-route-id="@(kvp.Value.Id)">Detail</a></td>
                </tr>
            }
        </tbody>
    </table>
}